        <script type="text/javascript">
            $(document).ready(function  () {
                var settings = {
                    styling: "bootstrap",
                    hide: false,
                    icon: true,
                    history: false,
                    width: "300px",
                    text_escape: false,
                    insert_brs: false
                };

                <% unless flash.empty? %>
                    <% flash.each do |name, msg| %>
                        var msgType;
                        <% case name %>
                        <% when "notice" %>
                            settings.type = 'info'
                        <% when "alert" %>
                            settings.type = 'error'
                        <% when "register_event" %>
                            settings.type = 'info'
                        <% when "team_invite" %>
                            settings.type = 'success'
                        <% when "error" %>
                            settings.type = 'error'
                        <% end %>
                        settings.title =  "<%= name.capitalize %>" ;
                        settings.text = "<%= msg %>";
                        $.pnotify(settings);
                    <% end %>
                <% end %>
