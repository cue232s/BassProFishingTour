<% content_for :advertise do %>
    <div class="standingsLogo">
        <div class="adSpace"></div>
        <img class="adImg" src="/assets/ad1.png" alt="Ad">
        <img class="adImg" src="/assets/ad2.png" alt="Ad">
        <img class="adImg" src="/assets/ad3.png" alt="Ad">
        <img class="adImg"src="/assets/ad4.png" alt="Ad">
    </div>
<% end %>

<div class="teamRegContainer">
    <div class="topGreenBanner">
        <p>Team Registration</p>
    </div>

    <%= form_for(@profile) do |f| %>
    <div class="teamRegContainerForm">
            <% if @profile.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

                    <ul>
                        <% @profile.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
            <div class="regTopText">
                <h3>Register Your Team</h3>
                <p>By registering for a Team Membership, you'll unlock the full benifits of the tour, including opportunities to win exciting prize and to qualify for regional and national championship events.</p>
                <h2>Learn more about Team Memberships.</h2>
            </div>
            <h3>Personal Information</h3>
            <div class="divideLine"></div>
            <div class="half">
                <%= f.label :first_name %>
                <%= f.text_field :first_name %>
            </div>
            <div class="half">
                <%= f.label :last_name %>
                <%= f.text_field :last_name %>
            </div>
            <div class="full">
                <%= f.label :street_address %>
                <%= f.text_field :street_address %>
            </div>
            <div class="third">
                <%= f.label :suite %>
                <%= f.text_field :suite %>
            </div>
            <div class="two thirds">
                <%= f.label :city %>
                <%= f.text_field :city %>
            </div>
            <div class="thirds">
                <%= f.label :state %>
                <%= f.text_field :state %>
            </div>
            <div class="two thirds">
                <%= f.label :zip %>
                <%= f.text_field :zip %>
            </div>
            <div class="two thirds">
                <%= f.label :phone %>
                <%= f.text_field :phone %>
            </div>
            <div class="third">
                <%= f.label :ext %>
                <%= f.text_field :ext %>
            </div>
            <div class="third">
                <%= f.label :shirt %>
                <%= f.select :shirt, [['Select Size', 1], ['XS', 2], ['S', 3], ['M', 4], ['L', 5], ['XXL', 6], ['XXXL', 7]] %>
            </div>
            <div class="full">
                <%= f.label :outdoor_rewards_number %>
                <%= f.text_field :outdoor_rewards_number %>
                <p>I don't have an Outdoor Rewards Number. Sign me up!</p>
            </div>
    </div>
            <div class="actions">
                <%= link_to 'Back', profiles_path %>
                <%= f.submit 'Continue' %>
            </div>
        <% end %>
</div>
<div class="formSpace"></div>