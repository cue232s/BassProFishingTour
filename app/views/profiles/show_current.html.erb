<%= render "shared/ads_bps" %>

<div class="tabContBackground">
    <div class="tabContainer">
        <ul class="nav nav-tabs" id="myTabs">
            <li class="active">
                <a data-toggle="tab" href="#tab1">
                    <div class="tabIconContainer">
                        <%= image_tag 'iconFishTab.png', id: 'fishSolo', class: 'iconSmall', alt: 'Fish Icon' %>
                        <div class="tabText">My Tour</div>
                    </div>
                </a>
            </li>
            <li>
                <a data-toggle="tab" href="#tab2">
                    <div class="tabIconContainer">
                        <%= image_tag 'iconPerson.png', class: 'iconSmall', alt: 'Person Icon' %>
                        <div class="tabText">My Team Profile</div>
                    </div>
                </a>
            </li>
            <li id="accountOn">
                <a data-toggle="tab" href="#tab3">
                    <div class="tabIconContainer">
                        <%= image_tag 'iconSettings.png', id: 'setSolo', class: 'iconSmall', alt: 'Settings Icon Icon' %>
                        <div class="tabText">My Accounts</div>
                    </div>
                </a>
            </li>
        </ul>
        <div class="tabbable">
            <div class="tab-content">
                <div id="tab1" class="tab-pane active">
                    <div class="tour-rank half">
                        <p>You haven't attended any events yet.  Check back after your first event for your rankings.</p>
                        <div class="tour-progress">
                            <p>5 events needed to qualify</p>
                            <%= image_tag 'icons/fish.png', alt: 'One Event' %>
                            <%= image_tag 'icons/fish.png', alt: 'Two Events' %>
                            <%= image_tag 'icons/fish.png', alt: 'Three Events' %>
                            <%= image_tag 'icons/fish.png', alt: 'Four Events' %>
                            <%= image_tag 'icons/fish.png', alt: 'Five Events' %>
                        </div>
                    </div>
                    <div class="half">
                        <%= link_to select_profile_picture_path, class: "smallPicButton" do %>
                        <% end %>

                        <%= link_to team_select_profile_picture_path, class: "bigPicButton" do %>
                        <% end %>


                         <div class="cutOutContainer">
                            <%= image_tag 'cutOutRight.png', class: 'cutOutRight', alt: 'Cut Out' %>
                            <%= image_tag @team.team_picture.url(:tourpro), class: 'tourPic', alt: 'Tour Picture' unless !@team || !@team.team_picture.exists? %>
                            <div class="cutOutText">
                                <h2><%= @profile.first_name || "My Profile" %></h2>
                                <p>Franki â€œFive-Fishesâ€ Andolini Partners with Joe Pesce for 2 years. 21 points for the 2014 season.  </p>
                            </div>
                        </div>

                        <%= image_tag 'iconManFish.png', class: 'manFishRight', alt: 'Man Fish' %>
                        <div class="manFishTextRight"><p>Upload a Team Photo Here</p></div>
                        <div class="picBoxContainer">
                            <%= image_tag 'picBox.png', class: 'picBox', alt: 'Picture Box' %>
                        </div>
                        <div class="tourContRightBot">
                            <%= link_to select_profile_picture_path  do %>
                                <% if @profile.picture.exists? %>
                                    <%= image_tag @profile.picture.url(:tour), class: 'tourPersonMain', alt: 'Person Icon' %>
                                <% else %>
                                    <%= image_tag 'iconPersonBig.png', class: 'tourPersonMain', alt: 'Person Icon' %>
                                <% end %>
                            <% end %>
                            <div class="tourPersonText">
                                <h3>My Teammate</h3>
                                <p>Your team information will propagate here once your teammate completes registration.</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="tab2" class="tab-pane">
                    <div class="myTourCont">
                        <div class="teamContRight">
                            <div class="myCont">
                                <%= image_tag 'iconWriteLight.png', class: 'writeIcon', alt: 'Write Icon' %>
                                <%= image_tag 'iconBoat.png', class: 'tourBoat', alt: 'Boat Icon' %>
                                <h3>Tournament Boat:</h3>
                                <p>Tell us what boat your team will be using for the Bass Pro Fishing Tour here.</p>
                            </div>
                            <div class="divideLine"></div>
                            <div class="myCont no">
                                <%= image_tag 'iconWriteLight.png', class: 'writeIcon', alt: 'Write Icon' %>
                                <%= image_tag 'iconLure.png', class: 'tourLure', alt: 'Lure Icon' %>
                                <h3>Favorite Gear:</h3>
                                <div class="gearTextCont">
                                    <form method="post">
                                        <textarea name="comments" cols="25" rows="3" placeholder="Share your favorite gear here or the equipment you have had the best luck with!"></textarea>
                                    </form>
                                </div>
                            </div>
                            <div class="divideLine"></div>
                            <div class="myCont">
                                <%= image_tag 'iconWriteLight.png', class: 'writeIcon', alt: 'Write Icon' %>
                                <% if @profile.picture.exists? %>
                                    <%= image_tag @profile.picture.url(:tour), class: 'tourPerson', alt: 'Person Icon' %>
                                <% else %>
                                    <%= image_tag 'iconPersonSmall.png', class: 'tourPerson', alt: 'Person Icon' %>
                                <% end %>
                                <h3>My Teammates</h3>
                                <p>This information will propagate once your teammate has completed the registration process. </p>
                            </div>
                        </div>

                        <div class="teamContLeft">

                             <div class="cutOutContainerLeft">
                                <%= image_tag 'cutOutLeft.png', class: 'cutOutLeft', alt: 'Cut Out' %>
                                <%= image_tag @team.team_picture(:teampro), class: 'teamPic', alt: 'Team Picture' unless !@team || @team.team_picture.exists? %>
                                <div class="cutOutTextTeam">
                                    <h2>My Teammates</h2>
                                    <p>Franki â€œFive-Fishesâ€ Andolini Partners with Joe Pesce for 2 years. 21 points for the 2014 season.  </p>
                                </div>
                            </div>

                            <%= image_tag 'iconManFish.png', class: 'manFishLeft', alt: 'Man Fish' %>
                            <div class="manFishTextLeft"><p>Upload a Team Photo Here</p></div>
                            <div class="picBoxContainerLeft">
                                <%= image_tag 'picBoxLeft.png', class: 'picBoxLeft', alt: 'Picture Box' %>
                            </div>
                            <div class="teamContLeftBot">
                                <%= image_tag 'iconWriteLight.png', class: 'writeIcon', alt: 'Write Icon' %>
                                <% if @profile.picture.exists? %>
                                   <%= image_tag @profile.picture.url(:teamP), class: 'teamPerson', alt: 'Person Icon' %>
                                <% else %>
                                   <%= image_tag 'iconPersonFull.png', class: 'teamPerson', alt: 'Person Icon' %>
                                <% end %>
                                <div class="teamPersonText">
                                    <h3>Your Name</h3>
                                    <p>"Come up with some clever advice here or a brief bio."</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="tab3" class="tab-pane">
                    <div class="teamRegContainer no">
                        <%= form_for(@profile) do |f| %>
                            <div class="teamRegContainerForm">
                                <% if @profile.errors.any? %>
                                    <div id="error_explanation">
                                        <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

                                        <ul>
                                            <% @profile.errors.full_messages.each do |msg| %>
                                                <li><%= msg %></li>
                                            <% end %>
                                        </ul>
                                    </div>
                                <% end %>

                                <div class="headText">
                                    <h3>Personal Information</h3>
                                </div>
                                <div class="divideLine"></div>
                                <div class="half">
                                    <%= f.label :first_name %>
                                    <%= f.text_field :first_name %>
                                </div>
                                <div class="half">
                                    <%= f.label :last_name %>
                                    <%= f.text_field :last_name %>
                                </div>
                                <div class="full">
                                    <%= f.label :street_address %>
                                    <%= f.text_field :street_address %>
                                </div>
                                <div class="third">
                                    <%= f.label :suite %>
                                    <%= f.text_field :suite %>
                                </div>
                                <div class="two thirds">
                                    <%= f.label :city %>
                                    <%= f.text_field :city %>
                                </div>
                                <div class="thirds">
                                    <%= f.label :state %>
                                    <%= f.text_field :state %>
                                </div>
                                <div class="two thirds">
                                    <%= f.label :zip %>
                                    <%= f.text_field :zip %>
                                </div>
                                <div class="two thirds">
                                    <%= f.label :phone %>
                                    <%= f.text_field :phone %>
                                </div>
                                <div class="third">
                                    <%= f.label :ext %>
                                    <%= f.text_field :ext %>
                                </div>
                                <div class="shirtSize">
                                    <%= f.label :shirt %>
                                    <%= f.select :shirt, [['Select Size', 1], ['XS', 2], ['S', 3], ['M', 4], ['L', 5], ['XXL', 6], ['XXXL', 7]] %>
                                </div>
                                <div class="full">
                                    <%= f.label :outdoor_rewards_number, "Outdoor Rewards Number" %>
                                    <%= f.text_field :outdoor_rewards_number %>
                                </div>
                                <div class="actions no">
                                    <%= f.submit 'Submit' %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript">
            $("#accountOn").on("click", function(event){
                if(($(this).attr("class")) != "active"){
                    $(".tabMidLeftCont, .tabMidRightCont").hide();
                }
            });
            $(".nav-tabs li").on("click", function(event){
                if((($(this).attr("id")) != "accountOn")){
                    $(".tabMidLeftCont, .tabMidRightCont").show();
                }
            });

            $(".nav-tabs li").on("click", function(event){
                if(($(this).attr("class")) != "accountOn"){
                    $(".adImg2, .adImg3, .adImg4").hide();
                }
            });
            $("#accountOn").on("click", function(event){
                if((($(this).attr("id")) != "active")){
                    $(".adImg2").show();
                }
            })
        </script>

        <div class="tabMiddleContainer">
            <div class="tabMidLeftCont">
   <!-- add render of partial with locals -->
                <% unless @can_register %>
                    <div class="teamEvents">
                        <div class="topDarkBrown">
                            <img class="iconSmallEvents" src="/assets/iconCal.png" alt="Icon">
                            <h2>My Events</h2>
                        </div>
                        <div class="topLightBrown">
                            <div class="teamListCover">
                                <h1>You Have No Events</h1>
                                <p>To register for an event, first you need to <a href="/teams/requests/new">find a teammate!</a></p>
                            </div>
                            <div class="teamList"><h3>Date</h3></div>
                            <div class="teamListM"><h3>Event Title</h3></div>
                            <div class="teamListR"><h3>Status</h3></div>
                        </div>
                        <div class="bottomBrown">
                            <div class="dateRow">
                                <% 3.times do %>
                                    <p>03/12/13</p>
                                    <p>03/12/13</p>
                                    <p>03/12/13</p>
                                    <p>03/12/13</p>
                                <% end %>
                            </div>
                            <div class="eventRow">
                                <% 3.times do %>
                                <p>Lake of the Ozarks</p>
                                <p>Lake of the Avarks</p>
                                <p>Lake of the Fishies</p>
                                <p>Lake of the Mayan Ruin</p>
                                <% end %>
                            </div>
                            <div class="pointRow">
                                <% 12.times do %>
                                <p>Coming Soon</p>
                                <% end %>
                            </div>
                        </div>
                    </div>
                <% else %>
                    <%= render 'my_events', :locals => { :profile => @profile } %>
                <% end %>
            </div>

            <div class="tabMidRightCont">
                <div class="leaderboard">
                    <div class="topBlue">
                        <%= image_tag 'iconGlobe.png', class: 'iconSmallEvents', alt: 'Icon' %>
                        <h2>Leaderboard</h2>
                    </div>
                    <p>The Bass Pro Fishing Tour just got started, so we don't have event data yet.  Check back later for results from our first event!</p>
                </div>
                <div class="myRegion">
                    <div class="topGreen">
                        <%= image_tag 'iconMed.png', class: 'iconSmallEvents', alt: 'Icon' %>
                        <h2>My Region</h2>
                    </div>
                    <div class="bottomGreyFlat">
                        <div class="greyCont">
                        </div>
                        <div class="greyCont">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript">

            $(function() {

                if(<%= @team.nil? %>) {
                    $('.bigPicButton').on('click', function (e) {
                      e.preventDefault();
                      alert("Get A Team Together First!");
                    });
                }
                // if the there are errors make sure MyAccounts tab is displayed
                if(<%= defined?(@showTab) != nil && @showTab %>) {
                    $('#myTabs a:last').tab('show');
                    $(".adImg2, .adImg3").show();
                    $(".tabMidLeftCont, .tabMidRightCont").hide();

                }



                //   var thisTab = e.target
                //   var pageTarget = $(thisTab).attr('href');
                //   var itemNumber = $(this).parent().index()+1;
                //   $("#tab"+itemNumber).load(pageTarget);

                // });
            });
        </script>

    </div>
</div>