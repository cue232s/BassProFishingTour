<div class="teamRegContainer">
    <div class="topGreenBanner">
        <p>Upload A Profile Picture</p>
    </div>

    <%= form_for @profile, :url => upload_profile_pic_path, :html => { :multipart => true }, method: "post" do |form| %>

        <div class="teamRegContainerForm">
            <% if @profile.errors.any? %>
                <div id="error_explanation">
                    <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

                    <ul>
                        <% @profile.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
                <div class="regTopText">
                    <h3>Upload a Picture of that Mug!</h3>
                    <div class="divideLine"></div>
                    <ul>
                        <li>This photo will can be edited from your profile page.</li>
                        <li>Say Cheese.</li>
                    </ul>
                </div>
                <%= form.file_field :picture %>

        </div>
        <div class="actions">
            <%= link_to :back, my_profile_path  %>
            <%= submit_tag :continue, value: 'Continue' %>
        </div>
    <% end %>

</div>