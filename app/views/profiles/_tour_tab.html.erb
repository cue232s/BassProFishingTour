<div id="tab1" class="tab-pane <%= "active" unless params[:tab] && (params[:tab] == 'team' || params[:tab] == 'account') %>">
    <div class="tour-rank half">

        <% if @is_current_user %>
            <!-- THIS NEEDS HELP -->
            <p>Sign up to fish in Tour Events, then check back to track your performance.</p>
        <% else %>
            <p><%= @profile.first_name %> hasn't attended any events yet.  Check back later for their rankings.</p>
        <% end %>

        <div class="tour-progress">
            <p>5 events needed to qualify</p>
            <%= image_tag 'icons/fish.png', alt: 'One Event' %>
            <%= image_tag 'icons/fish.png', alt: 'Two Events' %>
            <%= image_tag 'icons/fish.png', alt: 'Three Events' %>
            <%= image_tag 'icons/fish.png', alt: 'Four Events' %>
            <%= image_tag 'icons/fish.png', alt: 'Five Events' %>
        </div>
    </div>
    <div class="half">
         <div class="cutOutContainer">
            <div class="cutOutRight">
                <div class="cutTourLeft"></div>
                <div class="cutTourMiddle"><%= image_tag 'cutTourV.png', class: 'cutTourV', alt: 'Cut Out' %></div>
                <div class="cutTourRight"></div>
            </div>
            <%= image_tag @team.team_picture.url(:tourpro), class: 'tourPic', alt: 'Tour Picture' unless !@team || !@team.team_picture.exists? %>
            <div class="cutOutText">
                <h2><%= @profile.user.full_name  || "My Profile" %></h2>
                <p><%= best_in_place_if !current_user.nil? && @profile.id == current_user.id, @profile, :status, nil: "Tell us a little about your self and why your are here!"  %></p>
            </div>
        </div>

        <%= image_tag 'iconManFish.png', class: 'manFishRight', alt: 'Man Fish' %>
        <div class="manFishTextRight"><p>Go to My Team Profile to upload a Team Photo</p></div>
        <div class="picBoxContainer">
            <div class="picBox">
                <% unless @team && @team.team_picture.exists? %>
                <div class="tourDot">
                    <%= image_tag 'tourDot.png', alt: 'Doted' %>
                </div>
                <% end %>
            </div>
        </div>
        <div class="tourContRightBot">
            <%= link_to select_profile_picture_path  do %>
                <% if @profile.picture.exists? %>
                    <%= image_tag @profile.picture.url(:tour), class: 'tourPersonMain', alt: 'Person Icon' %>
                <% else %>
                    <%= image_tag 'iconPersonBig.png', class: 'tourPersonMain', alt: 'Person Icon' %>
                <% end %>
            <% end %>
        </div>
    </div>
</div>
