<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "submitLoginTextSign" %>
<% end -%>

<%- if controller_name != 'sessions' %>
  <div class="BottomBanner"><%= link_to "Already have an account? Login", new_session_path(resource_name), class: "regLoginTextSign" %></div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="BottomBanner"><%= link_to "Don't have an account? Sign up here!", new_user_registration_path, class: "submitLoginTextSign" %><br /></div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="BottomBanner"><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "submitLoginTextSign" %><br /></div>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
  <% end -%>
<% end -%>