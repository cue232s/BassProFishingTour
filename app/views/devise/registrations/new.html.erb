<div class="backgroundLogin">
    <div class="formContainer">
        <div class="bassLoginLogo">
            <%= image_tag 'bassLoginLogo.png', class: 'bassLoginLogo', alt: 'Bass Pro Shops Fishing Tour logo' %>
        </div>

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div><%= f.label :email, class: "submitLoginText" %>
          <%= f.email_field :email, :autofocus => true, class: "submitLogin" %></div>

          <div><%= f.label :password, class: "submitLoginText" %>
          <%= f.password_field :password, class: "submitLogin" %></div>

          <div><%= f.label :password_confirmation, class: "submitLoginText" %>
          <%= f.password_field :password_confirmation, class: "submitLogin" %></div>

          <div><%= f.submit "GO", class: "greenButton" %></div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>