<div class="backgroundLogin">
    <div class="formContainer">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div><%= f.label :email, class: "submitLoginText" %>
          <%= f.email_field :email, :autofocus => true, class: "submitLogin" %></div>

          <div><%= f.label :password, class: "submitLoginText" %>
          <%= f.password_field :password, class: "submitLoginKey" %></div>

          <div><%= f.label :password_confirmation, class: "submitLoginText" %>
          <%= f.password_field :password_confirmation, class: "submitLoginKey" %></div>

          <div><%= f.submit "GO", class: "greenButton" %></div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>