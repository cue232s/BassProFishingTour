<div class="backgroundLogin">
    <div class="formContainer">
        <div class="bassLoginLogo">
            <%= image_tag 'bassLoginLogo.png', class: 'bassLoginLogo', alt: 'Bass Pro Shops Fishing Tour logo' %>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <% flash.each do |name, msg| %>
                <% if msg =~ /email|password/ %>
                    <%= content_tag :div, msg, id: "flash_#{name}" %>
                <% end %>
            <% end %>

            <%= f.label :email, class: "submitLoginText" %>
            <%= f.email_field :email, :autofocus => true, class: "submitLogin" %>

            <%= f.label :password, class: "submitLoginText" %>
            <%= f.password_field :password, class: "submitLogin" %>

            <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me, class: "submitLoginCheck" %> <%= f.label :remember_me, class: "submitLoginRemember" %>
            <% end -%>

            <%= f.submit "Login", class: "greenButton" %>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>