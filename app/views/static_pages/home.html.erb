<% content_for :leaderboard do %>
    <div class="standingsLogo">
        <img src="/assets/standingsBackground.png" alt="Standings">
        <div class="standingsText">
            <h2>Standings</h2>
            <h1>Midwest Region</h1>
    <!--    <p>Jason Cambel</p>
            <p>Jason Cambel</p>
            <p>Jason Cambel</p>
            <p>Jason Cambel</p>
            <p>Jason Cambel</p> -->
        </div>
    </div>
<% end %>

<div id="homeContainer">
    <div class="bannerBigTopBackground">
        <div class="bannerBigTop">
            <div class="bannerBigText">
                <div class="bannerBigTextCont"><h2>Join for free and compete to win more than $25,000!</h2></div>
                <div class="bannerBigTextCont"><h1>Track your progress, net great prizes and qualify for big events.</h1></div>
                <div class="bannerBigTextContButton"><a href="/users/sign_up">CREATE AN ACCOUNT</a></div>
            </div>
            <div class="bannerBigImage">
                <div class="controller">
                    <div class="sliderButton" onclick="ss.move(1)"> <%= image_tag 'nextButton.png', alt: 'Next Button' %> </div>
                    <ol id="dots" class="dots">
                        <li></li>
                        <li></li>
                        <li></li>
                    </ol>
                </div>

                <div id="slideShow">
                    <ul id="slides">
                        <li><%= image_tag 'bannerBigImage.jpg', height: '513', alt: 'Bass Pro Fishing' %></li>
                        <li><%= image_tag 'bannerBigImage2.jpg', height: '513', alt: 'Bass Pro Fishing' %></li>
                        <li><%= image_tag 'bannerBigImage3.jpg', height: '513', alt: 'Bass Pro Fishing' %></li>
                    </ul>
                </div>

                <script>
                var ss = new bass.bassPro.init('ss', {
                    id: 'slides',
                    auto: false,
                    resume: false,
                    navid: 'dots',
                    navEvent: 'click',
                    activeClass: 'current',
                    pauseHover: false
                });
                </script>
            </div>
        </div>
    </div>

    <div class="bannerMiddleBackground">
        <div class="bannerMiddle">
            <div class="bassHandContainer">
                <%= image_tag 'bassHandImage.png', class: 'bassHand', alt: 'Bass Hand' %>
                <div class="bassHandText">
                    <h3>THE 2014 BASS PRO SHOPS FISHING TOUR</h3>
                    <h1>About the Tour</h1>
                    <h4>Welcome to the Bass Pro Shops Fishing Tour!</h4>
                    <p> Register your team to become eligible for cash and prizes exclusive to Bass Pro Shops Fishing Tour members! We’ll also keep track of your tournament results so you can see how you rank among your rivals. Point leaders qualify for regional events where you’ll compete with the big boys. It’s free, so sign up now!</p>
                </div>
            </div>
            <div class="glowBackground"></div>
            <div class="eventLeaderContainer">
                <div class="findEvent">
                    <a href="/events"><%= image_tag 'eventLogo.png', class: 'eventLogo', alt: 'Event Logo' %></a>
                </div>
                <div class="leaderboard">
                    <%= image_tag 'leaderboardLogo.png', class: 'leaderLogo', alt: 'Leader Logo' %>
                </div>
            </div>
            <div class="eventLeaderContainerText">
                <a href="/events"><div class="findEventText">
                    <h1>Find an Event</h1>
                    <p>Locate a Fishing Tour event near you. then register your team to participate.</p>
                    <h3>Locate Event</h3>
                </div></a>
                <div class="leaderboardText">
                    <h1>Leaderboard</h1>
                    <p>If you've recently participated in your local Fishing Tour event, don't forget to submit tour team results!</p>
                    <h3>Locate Event</h3>
                </div>
            </div>
        </div>
    </div>
</div>
